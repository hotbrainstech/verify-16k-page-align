{
  "name": "ts-npm-package-boilerplate",
  "version": "0.2.7",
  "description": "TypeScript NPM Module Boilerplate",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "npx prettier --write ./**/*.{js,jsx,ts,tsx,md,json}",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --fix --ext .js,.ts",
    "test": "jest --config jest.config.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hebertcisco/ts-npm-package-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "typescript",
    "npm",
    "module"
  ],
  "author": "hebertcisco",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hebertcisco/ts-npm-package-boilerplate/issues"
  },
  "homepage": "https://github.com/hebertcisco/ts-npm-package-boilerplate#readme",
  "devDependencies": {
    "@types/jest": "30.0.0",
    "@typescript-eslint/eslint-plugin": "8.43.0",
    "@typescript-eslint/parser": "8.43.0",
    "eslint": "9.35.0",
    "eslint-plugin-jest": "29.0.1",
    "jest": "30.1.3",
    "prettier": "3.6.2",
    "ts-jest": "29.4.1",
    "typescript": "5.9.2"
  },
  "files": [
    "lib/**/*"
  ]
}
